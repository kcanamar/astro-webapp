---
import Layout from "../layouts/default.astro"
import ShopItems from "../components/shop-items.astro";
import { Cart } from "../components/cart";
---

<Layout>
    <div class="shop">
        <h1>Snwich kits</h1>

        <!-- The noscript tag is to be displayed when the users have Javascript disabled in the browser -->
        <noscript>
            <p>
                JavaScript is required to purchase things from the sndwch web store.
                Call <a href="tel:+1234589829">The Shop</a>
            </p>
        </noscript>

        <div class="products">
            <ShopItems/>

            <Cart client:only="solid-js"/>
        </div>
    </div>
</Layout>

<style>
    .shop {
	padding: 3rem 5%;
    }

    .products {
        align-items: flex-start;
        display: grid;
        gap: 2rem;
        grid-template-columns: 1fr 260px;
        position: relative;
    }

</style>